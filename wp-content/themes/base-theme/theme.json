{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "color": {
      "custom": true,
      "customDuotone": true,
      "customGradient": true,
      "defaultGradients": false,
      "defaultPalette": false,
      "link": true,
      "palette": [
        {
          "slug": "primary",
          "color": "#0066cc",
          "name": "Primary"
        },
        {
          "slug": "secondary",
          "color": "#ff6b35",
          "name": "Secondary"
        },
        {
          "slug": "accent",
          "color": "#f7931e",
          "name": "Accent"
        },
        {
          "slug": "white",
          "color": "#ffffff",
          "name": "White"
        },
        {
          "slug": "black",
          "color": "#000000",
          "name": "Black"
        },
        {
          "slug": "gray-100",
          "color": "#f8f9fa",
          "name": "Gray 100"
        },
        {
          "slug": "gray-300",
          "color": "#dee2e6",
          "name": "Gray 300"
        },
        {
          "slug": "gray-600",
          "color": "#6c757d",
          "name": "Gray 600"
        },
        {
          "slug": "gray-900",
          "color": "#212529",
          "name": "Gray 900"
        },
        {
          "slug": "success",
          "color": "#28a745",
          "name": "Success"
        },
        {
          "slug": "danger",
          "color": "#dc3545",
          "name": "Danger"
        },
        {
          "slug": "warning",
          "color": "#ffc107",
          "name": "Warning"
        },
        {
          "slug": "info",
          "color": "#17a2b8",
          "name": "Info"
        }
      ],
      "gradients": [
        {
          "slug": "primary-secondary",
          "gradient": "linear-gradient(135deg, #0066cc 0%, #ff6b35 100%)",
          "name": "Primary to Secondary"
        },
        {
          "slug": "dark-overlay",
          "gradient": "linear-gradient(180deg, rgba(0,0,0,0) 0%, rgba(0,0,0,0.7) 100%)",
          "name": "Dark Overlay"
        }
      ]
    },
    "typography": {
      "customFontSize": true,
      "fontSizes": [
        {
          "slug": "xs",
          "size": "0.75rem",
          "name": "Extra Small"
        },
        {
          "slug": "sm",
          "size": "0.875rem",
          "name": "Small"
        },
        {
          "slug": "base",
          "size": "1rem",
          "name": "Base"
        },
        {
          "slug": "lg",
          "size": "1.125rem",
          "name": "Large"
        },
        {
          "slug": "xl",
          "size": "1.25rem",
          "name": "Extra Large"
        },
        {
          "slug": "2xl",
          "size": "1.5rem",
          "name": "2X Large"
        },
        {
          "slug": "3xl",
          "size": "1.875rem",
          "name": "3X Large"
        },
        {
          "slug": "4xl",
          "size": "2.25rem",
          "name": "4X Large"
        },
        {
          "slug": "5xl",
          "size": "3rem",
          "name": "5X Large"
        }
      ],
      "fontFamilies": [
        {
          "fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif",
          "slug": "primary",
          "name": "Primary (System)"
        },
        {
          "fontFamily": "Georgia, 'Times New Roman', Times, serif",
          "slug": "secondary",
          "name": "Secondary (Serif)"
        },
        {
          "fontFamily": "'Courier New', Courier, monospace",
          "slug": "mono",
          "name": "Monospace"
        }
      ],
      "fontWeight": true,
      "lineHeight": true
    },
    "spacing": {
      "customSpacingSize": true,
      "spacingSizes": [
        {
          "slug": "xs",
          "size": "0.25rem",
          "name": "Extra Small"
        },
        {
          "slug": "sm",
          "size": "0.5rem",
          "name": "Small"
        },
        {
          "slug": "md",
          "size": "1rem",
          "name": "Medium"
        },
        {
          "slug": "lg",
          "size": "1.5rem",
          "name": "Large"
        },
        {
          "slug": "xl",
          "size": "2rem",
          "name": "Extra Large"
        },
        {
          "slug": "2xl",
          "size": "3rem",
          "name": "2X Large"
        },
        {
          "slug": "3xl",
          "size": "4rem",
          "name": "3X Large"
        }
      ],
      "units": ["px", "em", "rem", "vh", "vw", "%"]
    },
    "layout": {
      "contentSize": "800px",
      "wideSize": "1200px"
    },
    "custom": {
      "spacing": {
        "unit": "0.5rem"
      },
      "borderRadius": {
        "sm": "0.125rem",
        "base": "0.25rem",
        "lg": "0.5rem",
        "xl": "1rem",
        "full": "9999px"
      },
      "shadow": {
        "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
        "base": "0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06)",
        "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
        "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)",
        "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)"
      }
    },
    "border": {
      "color": true,
      "radius": true,
      "style": true,
      "width": true
    },
    "appearanceTools": true
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--white)",
      "text": "var(--wp--preset--color--gray-900)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--primary)",
      "fontSize": "var(--wp--preset--font-size--base)",
      "lineHeight": "1.5"
    },
    "spacing": {
      "blockGap": "1.5rem"
    },
    "elements": {
      "link": {
        "color": {
          "text": "var(--wp--preset--color--primary)"
        },
        ":hover": {
          "color": {
            "text": "var(--wp--preset--color--secondary)"
          }
        }
      },
      "h1": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--5-xl)",
          "lineHeight": "1.25"
        }
      },
      "h2": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--4-xl)",
          "lineHeight": "1.25"
        }
      },
      "h3": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--3-xl)",
          "lineHeight": "1.25"
        }
      },
      "h4": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--2-xl)",
          "lineHeight": "1.25"
        }
      },
      "h5": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--xl)",
          "lineHeight": "1.25"
        }
      },
      "h6": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--lg)",
          "lineHeight": "1.25"
        }
      },
      "button": {
        "color": {
          "background": "var(--wp--preset--color--primary)",
          "text": "var(--wp--preset--color--white)"
        },
        "border": {
          "radius": "0.25rem"
        },
        ":hover": {
          "color": {
            "background": "var(--wp--preset--color--secondary)"
          }
        }
      }
    },
    "blocks": {
      "core/button": {
        "border": {
          "radius": "0.25rem"
        }
      },
      "core/group": {
        "spacing": {
          "padding": {
            "top": "1.5rem",
            "right": "1.5rem",
            "bottom": "1.5rem",
            "left": "1.5rem"
          }
        }
      },
      "core/quote": {
        "border": {
          "color": "var(--wp--preset--color--primary)",
          "style": "solid",
          "width": "0 0 0 4px"
        },
        "spacing": {
          "padding": {
            "left": "1.5rem"
          }
        }
      }
    }
  },
  "templateParts": [
    {
      "name": "header",
      "title": "Header",
      "area": "header"
    },
    {
      "name": "footer",
      "title": "Footer",
      "area": "footer"
    }
  ],
  "customTemplates": [
    {
      "name": "blank",
      "title": "Blank Template",
      "postTypes": ["page"]
    },
    {
      "name": "full-width",
      "title": "Full Width",
      "postTypes": ["page", "post"]
    }
  ]
}
